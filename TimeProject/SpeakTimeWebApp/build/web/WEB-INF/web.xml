<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StartSessionServlet</servlet-name>
        <servlet-class>za.ac.nare.controllers.StartSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessServlet</servlet-name>
        <servlet-class>za.ac.nare.controllers.ProcessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>za.ac.nare.controllers.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewTimesServlet</servlet-name>
        <servlet-class>za.ac.nare.controllers.ViewTimesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>za.ac.nare.controllers.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveServlet</servlet-name>
        <servlet-class>za.ac.nare.controllers.RemoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>za.ac.nare.controllers.LogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServlet</servlet-name>
        <url-pattern>/StartSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessServlet</servlet-name>
        <url-pattern>/ProcessServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewTimesServlet</servlet-name>
        <url-pattern>/ViewTimesServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveServlet</servlet-name>
        <url-pattern>/RemoveServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/LogOut.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>computer_name</param-name>
        <param-value>Siri</param-value>
    </context-param>
    <error-page>
        <exception-type>za.ac.tut.exception.InvalidCode</exception-type>
        <location>/error_code.jsp</location>
    </error-page>
    <error-page>
        <exception-type>za.ac.tut.exception.InvalidTime</exception-type>
        <location>/error_time.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/access_denied.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.NumberFormatException</exception-type>
        <location>/num_format.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>ClientConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>ClientResource</web-resource-name>
            <description>Resources for only client</description>
            <url-pattern>/name_entry.jsp</url-pattern>
            <url-pattern>/StartSessionServlet.do</url-pattern>
            <url-pattern>/normal_user_menu.jsp</url-pattern>
            <url-pattern>/provide_time.jsp</url-pattern>
            <url-pattern>/ProcessServlet.do</url-pattern>
            <url-pattern>/time_outcome.jsp</url-pattern>
            <url-pattern>/logout_outcome.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Enables to only client</description>
            <role-name>client</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>ManagerConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>ManagerResource</web-resource-name>
            <description>Resources for manager</description>
            <url-pattern>/super_user_menu.html</url-pattern>
            <url-pattern>/ViewTimesServlet.do</url-pattern>
            <url-pattern>/view_times_outcome.jsp</url-pattern>
            <url-pattern>/search.jsp</url-pattern>
            <url-pattern>/SearchServlet.do</url-pattern>
            <url-pattern>/search_outcome.jsp</url-pattern>
            <url-pattern>/remove_user.jsp</url-pattern>
            <url-pattern>/RemoveServlet.do</url-pattern>
            <url-pattern>/remove_outcome.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Enables for only managers</description>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Client checks time
</description>
        <role-name>client</role-name>
    </security-role>
    <security-role>
        <description>Manager view,search,remove
</description>
        <role-name>manager</role-name>
    </security-role>
</web-app>
